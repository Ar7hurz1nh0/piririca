{
  "compilerOptions": {
    "target": "ES2021",
    "module": "CommonJS",
    "removeComments": true,
    "allowJs": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "incremental": true,
    "baseUrl": ".",
    "outDir": "./dist"
  },
  "include": [ "**/*.ts", "**/*.json", ".config.json" ],
  "exclude": [ "node_modules", "dist" ]
}
